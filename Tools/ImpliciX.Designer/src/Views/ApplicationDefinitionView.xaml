<UserControl x:Class="ImpliciX.Designer.Views.ApplicationDefinitionView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400">

  <DockPanel LastChildFill="True" Classes="screen pdf">
    <StackPanel Classes="screen pdf" DockPanel.Dock="Top">
      <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Classes="screen pdf" />
      <WrapPanel Classes="screen pdf">
        <TextBlock Text="Data model size:" Classes="screen pdf" />
        <TextBlock Text="{Binding DeviceDefinition.Urns.Count}" Classes="screen pdf" />
      </WrapPanel>
    </StackPanel>
  </DockPanel>
</UserControl>
